{
  "name": "core3-utils",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist\"",
    "build": "tsc --build",
    "lint": "eslint",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"packages/*/dist/test/**/*.unit.js\"",
    "prettify": "prettier . --write"
  },
  "devDependencies": {
    "@file-services/memory": "^11.0.1",
    "@file-services/types": "^11.0.1",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "24",
    "@types/sinon": "^21.0.0",
    "@types/sinon-chai": "^4.0.0",
    "@types/yargs": "^17.0.35",
    "chai": "^6.2.2",
    "chai-as-promised": "^8.0.2",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "expose-gc": "^1.0.0",
    "mocha": "^12.0.0-beta-8",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "sinon": "^21.0.1",
    "sinon-chai": "^4.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "license": "MIT"
}
