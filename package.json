{
  "name": "core3-utils",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf ./packages/*/dist",
    "build": "tsc --build",
    "lint": "eslint .",
    "pretest": "yarn lint && yarn build",
    "test": "yarn test:only",
    "test:only": "mocha \"packages/*/dist{,/cjs}/test/**/*.unit.js\"",
    "test:dev": "mocha -r @ts-tools/node/r \"packages/*/test/**/*.unit.ts{,x}\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@ts-tools/node": "^4.0.0",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/make-fetch-happen": "^10.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "lerna": "^5.5.2",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "typescript": "~4.8.3"
  },
  "license": "MIT",
  "private": true
}
