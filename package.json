{
  "name": "core3-utils",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g \"./packages/*/dist*\" dist temp _docs",
    "build": "tsc --build",
    "lint": "eslint",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:no-docs",
    "test:no-docs": "mocha \"packages/{,!(docs)}/dist{,/cjs}/test/**/*.unit.js\"",
    "test:docs": "mocha \"packages/docs/dist{,/cjs}/test/**/*.unit.js\"",
    "prettify": "npx prettier . --write"
  },
  "devDependencies": {
    "@file-services/memory": "^9.4.1",
    "@file-services/types": "^9.4.1",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@types/yargs": "^17.0.33",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "expose-gc": "^1.0.0",
    "mocha": "^10.8.2",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "license": "MIT",
  "private": true
}
