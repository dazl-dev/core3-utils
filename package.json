    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/yargs": "^17.0.33",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "expose-gc": "^1.0.0",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
